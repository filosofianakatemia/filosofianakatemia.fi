<div class="medium-10 small-centered blog-post column">
  <div class="row left-aligned blog-content">

    {% if not listView %}
    <div class="row breadcrumbs">
      <div class="column">
        <a href="/blogi">Blogi<span class="icon-arrow-right"></span></a>
        <span class="font-bold">{{ blog.title }}</span>
      </div>
    </div>
    {% endif %}

    <div class="row byline">
      <div class="column">
        <span>{{ blog.published | d.M.yyyy }} | {{ blog.author if blog.author else "vieraskyn√§" }}</span>
      </div>
    </div>

    <h1>
    {% if listView %}
      {# Add link to the single blog page #}
      <a href="/blogi/{{ blog.path }}">{{ blog.title }}</a>
    {% else %}
      {{ blog.title }}
    {% endif %}
    </h1>

    {% if blog.picture %}
    <div class="head-shot">
      <img src="{{ blog.picture }}"/>
    </div>
    {% endif %}

    <div class="blog-content">
      <p>{{ blog.ingress | safe }}</p>
      {{ blog.content | safe }}
    </div>
    <div class="row some-row">
      {% if listView %}
        <div class="medium-4 large-4 columns">
          <a href="/blogi/{{ blog.path }}#some-comment" class="some-involve font-bold">
            <span>Osallistu keskusteluun<span class="icon-arrow-right"></span></span>
          </a>
        </div>
      {% endif %}
      <div class="medium-8 large-8 columns">
        <div class="{{ "medium-right" if listView}} some-share">
          {% if not listView %}
            <div class="total-shares">
              <span id="total-shares_count" class="total-shares_count"></span>
              <span class="total-shares_text">jakoa</span>
            </div>
          {% endif %}
          <a href class="some-share_link" onclick="app.facebookShareBlog('{{ blog.ingress }}', '{{ blog.path }}', '{{ blog.title }}', '{{ blog.picture }}')">
            <span  class="icon-facebook"></span>
          </a>
          <a href class="some-share_link" onclick="app.twitterShareBlog('{{ blog.path }}', '{{ blog.title }}')">
            <span class="icon-twitter"></span>
          </a>
          <a href class="some-share_link" onclick="app.linkedInShareBlog('{{ blog.ingress }}', '{{ blog.path }}', '{{ blog.title }}', '{{ blog.picture }}')">
            <span class="icon-linkedin"></span>
          </a>
        </div>
      </div>
    </div>
    <div class="divider"></div>
    {% if not listView %}
      <div id="some-comment">
        <div class="fb-comments" data-href="https://filosofianakatemia.fi/blogi/{{ blog.path }}" data-width="100%" data-numposts="5"></div>
      </div>
    {% endif %}
  </div>
</div>
